    "serve-static": "^1.15.0",
    "tree-kill": "^1.2.2",
    "turndown": "^7.1.2",
    "write-file-atomic": "^5.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@liquify/schema": "^0.8.4",
