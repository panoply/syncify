{
  "name": "@syncify/cli",
  "description": "The next generation build tool for Shopify theme development.",
  "version": "0.0.1-rc.1",
  "license": "Apache-2.0",
  "homepage": "https://github.com/panoply/syncify",
  "bugs": "https://github.com/panoply/syncify/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/panoply/syncify.git"
  },
  "author": {
    "name": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
    "url": "https://github.com/panoply",
    "email": "n.savvidis@gmx.com"
  },
  "files": [
    "dist",
    "types",
    "schema",
    "hot.js.liquid",
    "LICENCE",
    "package.json",
    "pnpm-lock.yaml"
  ],
  "keywords": [
    "cli",
    "command line",
    "themekit",
    "syncify",
    "shopify",
    "shopify theme",
    "shopify node",
    "shopify theme",
    "shopify sync",
    "shopify cli"
  ],
  "engines": {
    "pnpm": ">=9",
    "node": ">=20",
    "vscode": "^1.22.0"
  },
  "bin": {
    "syncify": "./dist/cli.js",
    "sy": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "types": "./types/index.d.ts",
    "require": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "syncify": "dist/cli.js",
    "@docs": "pnpm -F @syncify/docs",
    "@hot": "pnpm -F @syncify/hot",
    "@turndown": "pnpm -F @syncify/turndown"
  },
  "prettier": "@syncify/prettier-config",
  "eslintConfig": {
    "extends": "@syncify/eslint-config",
    "ignorePatterns": ["dist", "**/theme", "test/e2e/theme", "hot.min.js"],
    "rules": {
      "object-curly-newline": "off",
      "no-import-assign": "off",
      "no-new-func": "off",
      "no-control-regex": "off",
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 0,
          "SwitchCase": 1,
          "CallExpression": {
            "arguments": 1
          }
        }
      ]
    }
  },
  "dependencies": {
    "@syncify/turndown": "workspace:^",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.7",
    "cbor": "^9.0.2",
    "chokidar": "^4.0.1",
    "chrome-launcher": "^1.1.2",
    "chrome-remote-interface": "^0.33.2",
    "clean-css": "^5.3.3",
    "dotenv": "^16.4.5",
    "enquirer": "^2.4.1",
    "esbuild": "^0.24.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "7.2.0",
    "markdown-it": "^14.1.0",
    "ngrok": "5.0.0-beta.2",
    "node-notifier": "^10.0.1",
    "postcss": "^8.4.47",
    "postcss-load-config": "^6.0.1",
    "svg-sprite": "^2.0.4",
    "svgo": "^3.3.2",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.48.0"
  },
  "devDependencies": {
    "@liquify/schema": "^0.9.5",
    "@syncify/ansi": "workspace:^",
    "@syncify/eslint-config": "workspace:^",
    "@syncify/prettier-config": "workspace:^",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/svg-sprite": "^0.0.39",
    "@types/write-file-atomic": "^4.0.3",
    "anymatch": "^3.1.3",
    "clean-stack": "^5.2.0",
    "eslint": "^8.56.0",
    "log-update": "^6.1.0",
    "p-map": "^7.0.2",
    "p-queue": "^8.0.1",
    "parse-json": "^8.1.0",
    "prettier": "^3.3.3",
    "rambdax": "^11.2.0",
    "sass": "^1.79.4",
    "sharp": "^0.33.5",
    "strip-json-comments": "^5.0.1",
    "tailwindcss": "^3.4.13",
    "tree-kill": "^1.2.2",
    "tsconfig-type": "^1.29.0",
    "tsup": "^8.3.0",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2",
    "wrap-ansi": "^9.0.0",
    "write-file-atomic": "^6.0.0"
  },
  "peerDependencies": {
    "sass": "^1.69.4",
    "sharp": "^0.32.5",
    "tailwindcss": "^3.3.3"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "sharp": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  }
}
