{
  "name": "@syncify/cli",
  "description": "A lightening fast build tool for developing Shopify themes.",
  "version": "0.1.0-beta",
  "homepage": "https://github.com/panoply/syncify",
  "author": {
    "name": "Nikolas Savvidis",
    "url": "https://github.com/panoply"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/panoply/syncify.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/syncify/issues"
  },
  "types": "package/@types",
  "main": "package/index.js",
  "exports": {
    ".": {
      "import": "./package/index.mjs",
      "require": "./package/index.js"
    }
  },
  "files": [
    "./bin/sync",
    "./package/index.js",
    "./package/index.mjs",
    "./package/index.d.ts",
    "./schema.json"
  ],
  "license": "ISC",
  "keywords": [
    "cli",
    "command line",
    "themekit",
    "syncify",
    "shopify",
    "shopify theme",
    "shopify node",
    "shopify theme",
    "shopify sync"
  ],
  "bin": {
    "sync": "./bin/sync.cjs",
    "syncify": "./bin/sync.cjs"
  },
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "extends": "@brixtol/eslint-config",
    "ignorePatterns": [
      "docs"
    ],
    "rules": {
      "object-curly-newline": "off",
      "no-import-assign": "off"
    }
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "syncify": "./bin/sync",
    "types": "tsc --noEmit --emitDeclarationOnly false",
    "test": "ava ./test/transform/minify.js --watch",
    "postinstall": "node ./scripts/post-install.cjs"
  },
  "dependencies": {
    "@web/config-loader": "^0.1.3",
    "ansis": "^1.4.0",
    "anymatch": "^3.1.2",
    "axios": "^0.27.2",
    "chokidar": "^3.5.3",
    "clean-stack": "^4.2.0",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.0.1",
    "fast-safe-stringify": "^2.1.1",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "7.0.0-beta.0",
    "markdown-it": "^13.0.1",
    "mergerino": "^0.4.0",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.6",
    "p-queue": "^7.2.0",
    "prompts": "^2.4.2",
    "rambdax": "^8.0.1",
    "strip-ansi": "^7.0.1",
    "tiny-spinner": "^2.0.0",
    "tsup": "^6.2.0",
    "turndown": "^7.1.1",
    "turndown-plugin-gfm": "^1.0.2",
    "wrap-ansi": "^8.0.1"
  },
  "devDependencies": {
    "@brixtol/eslint-config": "^1.2.5",
    "@brixtol/prettier-config": "^1.2.1",
    "@brixtol/rollup-config": "^1.5.5",
    "@types/mime-types": "^2.1.1",
    "@types/minimist": "^1.2.2",
    "ava": "^4.3.1",
    "esbuild": "^0.14.51",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.7.1",
    "rollup": "^2.77.2",
    "type-fest": "^2.17.0",
    "typescript": "^4.7.4"
  },
  "optionalDependencies": {
    "browser-sync": "^2.27.10",
    "postcss": "^8.4.14",
    "sass": "^1.54.0",
    "svg-sprite": "^1.5.4",
    "svgo": "^2.8.0"
  }
}
