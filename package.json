{
  "name": "@liquify/syncify",
  "description": "A lightening fast build tool for developing Shopify themes.",
  "version": "0.1.0-beta",
  "homepage": "https://github.com/panoply/syncify",
  "author": {
    "name": "Nikolas Savvidis",
    "url": "https://github.com/panoply"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/panoply/syncify.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/syncify/issues"
  },
  "types": "package/@types",
  "main": "package/index.js",
  "exports": {
    ".": {
      "import": "./package/index.mjs",
      "require": "./package/index.js"
    }
  },
  "files": [
    "./bin/sync",
    "./package/index.js",
    "./package/index.mjs",
    "./package/index.d.ts",
    "./schema.json"
  ],
  "license": "ISC",
  "keywords": [
    "cli",
    "command line",
    "themekit",
    "syncify",
    "shopify",
    "shopify theme",
    "shopify node",
    "shopify theme",
    "shopify sync"
  ],
  "bin": {
    "sync": "./bin/sync.cjs",
    "syncify": "./bin/sync.cjs"
  },
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "extends": "@brixtol/eslint-config",
    "rules": {
      "object-curly-newline": "off",
      "no-import-assign": "off"
    }
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "syncify": "./bin/sync",
    "types": "tsc --noEmit --emitDeclarationOnly false",
    "test": "ava ./test/transform/minify.js --watch"
  },
  "dependencies": {
    "ansis": "^1.3.4",
    "anymatch": "^3.1.2",
    "axios": "^0.25.0",
    "chokidar": "^3.5.3",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.0.0",
    "fast-safe-stringify": "^2.1.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "html-minifier-terser": "^7.0.0-alpha.1",
    "minimist": "^1.2.5",
    "p-queue": "^7.2.0",
    "prompts": "^2.4.2",
    "rambdax": "^8.0.1"
  },
  "devDependencies": {
    "@brixtol/eslint-config": "^1.2.1",
    "@brixtol/prettier-config": "^1.2.1",
    "@brixtol/rollup-config": "^1.5.1",
    "ava": "^4.0.1",
    "esbuild": "^0.14.21",
    "eslint": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.5.1",
    "rollup": "^2.67.1",
    "type-fest": "^2.11.2",
    "typescript": "^4.5.5"
  },
  "optionalDependencies": {
    "browser-sync": "^2.27.7",
    "postcss": "^8.4.6",
    "sass": "^1.49.7",
    "svg-sprite": "^1.5.4",
    "svgo": "^2.8.0"
  }
}
