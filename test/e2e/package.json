{
  "name": "e2e-test-syncify",
  "version": "1.0.0",
  "description": "Test project for Syncify",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "test:prompts": "syncify",
    "test:vsc": "syncify vsc",
    "test:export": "syncify export",
    "test:build": "syncify build",
    "test:build:prod": "syncify build",
    "test:watch": "syncify watch -s syncify -t test,dev --prod",
    "test:watch:multi": "syncify watch -s syncify,boefje --syncify dev,prod,stage,test --boefje dev,prod",
    "test:upload": "syncify upload --store syncify --theme test",
    "test:upload:multi": "syncify upload --store syncify,boefje --syncify dev --boefje dev,prod",
    "test:download": "sync watch syncify -t dev -o downloads",
    "test:download:multi": "sync watch --store syncify,boefje --syncify dev --boefje dev,prod -o downloads/",
    "test:spawns": "syncify watch syncify -t test --var spawns",
    "test:spawn:rollup": "syncify watch syncify -t test --var rollup",
    "test:spawn:postcss": "syncify watch syncify -t test --var postcss",
    "test:spawn:webpack": "syncify watch syncify -t test --var webpack",
    "test:spawn:esbuild": "syncify watch syncify -t test --var esbuild",
    "test:spawn:gulp": "syncify watch syncify -t test --var gulp"
  },
  "syncify": {
    "stores": [
      {
        "domain": "syncify",
        "themes": {
          "dev": 129457717489,
          "prod": 129457717489,
          "stage": 129457717489,
          "test": 129457717489
        }
      },
      {
        "domain": "boefje",
        "themes": {
          "dev": 43989205050,
          "prod": 43989205050
        }
      }
    ],
    "paths": {
      "assets": [],
      "config": [
        "json/config/*.json"
      ],
      "locales": [
        "json/locales/*.json"
      ],
      "layout": [
        "views/theme.liquid"
      ],
      "sections": [
        "views/sections/**/*.liquid"
      ],
      "snippets": [
        "views/snippets/*.liquid",
        "css/vars.css.liquid"
      ],
      "templates": [
        "views/templates/*.liquid",
        "views/templates/*.json"
      ],
      "customers": [
        "views/customers/*.liquid",
        "views/customers/*.json"
      ]
    },
    "dirs": {
      "source": "source",
      "output": "theme",
      "import": "import",
      "export": "export",
      "config": "config"
    },
    "spawn": {
      "watch": {
        "rollup": "rollup -w -c config/rollup.config.js",
        "webpack": "webpack --watch --color --config config/webpack.config.js"
      },
      "build": {
        "rollup": "rollup -c config/rollup.config.js",
        "webpack": "webpack --config config/webpack.config.js --color"
      }
    },
    "metafields": {
      "input": "metafields",
      "bind": false
    },
    "transform": {
      "icons": {
        "inline": [
          "svg/inline/*.svg"
        ],
        "sprites": [
          {
            "input": [
              "svg/sprite/*.svg"
            ],
            "output": "icons.liquid",
            "options": {
              "dimensionAttributes": true,
              "namespaceClassnames": false,
              "namespaceIDS": false,
              "rootAttributes": {
                "id": "icons"
              }
            }
          }
        ]
      },
      "views": {
        "sections": {
          "allowPrefix": true,
          "onlyPrefixDuplicates": false,
          "prefixSeparator": "_",
          "globals": [
            "global"
          ]
        },
        "minify": {
          "env": "production",
          "collapseWhitespace": true,
          "ignoredLiquidTags": [],
          "removeComments": true,
          "removeLiquidNewlineAttributes": true,
          "removeRedundantWhitespaceDashes": true,
          "removeLiquidComments": true,
          "minifySectionSchema": true,
          "ignoreCustomFragments": [],
          "minifyCSS": true,
          "minifyJS": true,
          "exclude": [
            "exclude.liquid"
          ]
        }
      },
      "json": {
        "spaces": 2,
        "minify": {
          "apply": "production",
          "removeSchemaRefs": true,
          "exclude": [
            "exclude.json"
          ]
        }
      },
      "styles": [
        {
          "input": "styles/stylesheet.scss",
          "snippet": false,
          "postcss": "production",
          "rename": "stylesheet.min.css",
          "include": [
            "node_modules/"
          ],
          "watch": [
            "styles/**/*.scss"
          ],
          "sass": {
            "warnings": false,
            "sourcemap": true,
            "style": "compressed"
          }
        },
        {
          "input": "scss/index.scss",
          "snippet": false,
          "rename": "main.min.css",
          "watch": [
            "!scss/bootstrap.scss",
            "scss/dir/*.scss"
          ]
        },
        {
          "input": "scss/bootstrap.scss",
          "snippet": false,
          "sass": {
            "warnings": false,
            "sourcemap": true,
            "style": "compressed"
          },
          "include": [
            "node_modules/"
          ]
        },
        {
          "input": "css/styles/one.css",
          "rename": "example.css",
          "snippet": false,
          "watch": [
            "css/**/*.css"
          ]
        },
        {
          "input": [
            "scss/base/*.scss",
            "scss/independent/*.scss"
          ],
          "rename": {
            "prefixDir": true,
            "separator": "-"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@liquify/syncify": "link:../..",
    "bootstrap": "4.6.0"
  },
  "devDependencies": {
    "esbuild": "^0.14.11",
    "gulp": "^4.0.2",
    "postcss": "^8.4.5",
    "rollup": "^2.64.0",
    "sass": "^1.49.7",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
