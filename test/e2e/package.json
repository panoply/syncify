{
  "name": "e2e-test-syncify",
  "version": "1.0.0",
  "description": "Test project for Syncify",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "test:syncify": "syncify",
    "test:vsc": "syncify --vsc",
    "test:export": "syncify export",
    "test:build": "syncify --build",
    "test:build:prod": "syncify -b --prod",
    "test:watch": "sync syncify -t test,dev -w --prod",
    "test:watch:multi": "syncify syncify,boefje --prod -w --syncify dev,prod,stage,test --boefje dev,prod",
    "test:upload": "sync syncify -t test -u",
    "test:upload:multi": "syncify upload --store syncify,boefje --syncify dev --boefje dev,prod",
    "test:download": "sync syncify -d -t dev",
    "test:download:multi": "sync watch --store syncify,boefje --syncify dev --boefje dev,prod -o downloads/"
  },
  "$syncify": {
    "stores": [
      {
        "domain": "syncify",
        "themes": {
          "dev": 129457717489,
          "prod": 129457717489,
          "stage": 129457717489,
          "test": 129457717489
        }
      },
      {
        "domain": "boefje",
        "themes": {
          "dev": 43989205050,
          "prod": 43989205050
        }
      }
    ],
    "dirs": {
      "source": "source",
      "output": "theme",
      "import": "import",
      "export": "export",
      "config": "config"
    },
    "paths": {
      "assets": [
        "theme/assets/*.js"
      ],
      "config": [
        "json/config/*.json"
      ],
      "locales": [
        "json/locales/*.json"
      ],
      "layout": [
        "views/theme.liquid"
      ],
      "sections": [
        "views/sections/**/*.liquid"
      ],
      "snippets": [
        "views/snippets/*.liquid",
        "css/vars.css.liquid"
      ],
      "templates": [
        "views/templates/*.liquid",
        "views/templates/*.json"
      ],
      "customers": [
        "views/customers/*.liquid",
        "views/customers/*.json"
      ],
      "metafields": [
        "metafields"
      ],
      "pages": [
        "pages/*.md",
        "pages/*.html"
      ]
    },
    "spawn": {
      "watch": {
        "rollup": "rollup -w -c config/rollup.config.js",
        "webpack": "webpack --watch --color --config config/webpack.config.js"
      },
      "build": {
        "rollup": "rollup -c config/rollup.config.js",
        "webpack": "webpack --config config/webpack.config.js --color"
      }
    },
    "transform": {
      "icons": {
        "inline": [
          "svg/inline/*.svg"
        ],
        "sprites": [
          {
            "input": [
              "svg/sprite/*.svg"
            ],
            "output": "icons.liquid",
            "options": {
              "dimensionAttributes": true,
              "namespaceClassnames": false,
              "namespaceIDS": false,
              "rootAttributes": {
                "id": "icons"
              }
            }
          }
        ]
      },
      "markdown": {
        "minify": "prod",
        "headerIds": true,
        "headerPrefix": "",
        "highlight": true,
        "mangle": true,
        "silent": false,
        "smartypants": false
      },
      "views": {
        "sections": {
          "allowPrefix": true,
          "onlyPrefixDuplicates": false,
          "prefixSeparator": "_",
          "globals": [
            "global"
          ]
        },
        "minify": {
          "env": "production",
          "collapseWhitespace": true,
          "ignoredLiquidTags": [],
          "removeComments": true,
          "removeLiquidNewlineAttributes": true,
          "removeRedundantWhitespaceDashes": true,
          "removeLiquidComments": true,
          "minifySectionSchema": true,
          "ignoreCustomFragments": [],
          "minifyCSS": true,
          "minifyJS": true,
          "exclude": [
            "exclude.liquid"
          ]
        }
      },
      "json": {
        "spaces": 2,
        "minify": {
          "apply": "production",
          "removeSchemaRefs": true,
          "exclude": [
            "exclude.json"
          ]
        }
      },
      "styles": [
        {
          "input": "styles/stylesheet.scss",
          "snippet": false,
          "rename": "stylesheet.min.css",
          "postcss": {
            "env": "prod"
          },
          "include": [
            "node_modules/"
          ],
          "watch": [
            "styles/**/*.scss"
          ],
          "sass": {
            "warnings": false,
            "sourcemap": true,
            "style": "compressed"
          }
        },
        {
          "input": "scss/index.scss",
          "snippet": false,
          "rename": "main.min.css",
          "watch": [
            "!scss/bootstrap.scss",
            "scss/dir/*.scss"
          ]
        },
        {
          "input": "scss/bootstrap.scss",
          "snippet": false,
          "sass": {
            "warnings": false,
            "sourcemap": true,
            "style": "compressed"
          },
          "include": [
            "node_modules/"
          ]
        },
        {
          "input": "css/styles/one.css",
          "rename": "example.css",
          "snippet": false,
          "watch": [
            "css/**/*.css"
          ]
        },
        {
          "input": [
            "scss/base/*.scss",
            "scss/independent/*.scss"
          ],
          "rename": {
            "prefixDir": true,
            "separator": "-"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@syncify/cli": "link:../..",
    "bootstrap": "5.2.0"
  },
  "devDependencies": {
    "@liquify/syncify": "link:../..",
    "esbuild": "^0.14.51",
    "gulp": "^4.0.2",
    "postcss": "^8.4.14",
    "rollup": "^2.77.2",
    "sass": "^1.54.0",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
