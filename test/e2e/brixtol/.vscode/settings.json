{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // "**/node_modules": true,
    "**/source/images": true
  },
  "npm.packageManager": "pnpm",
  "eslint.packageManager": "pnpm",
  "[scss]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "sissel.shopify-liquid"
  },
  "editor.foldingStrategy": "indentation",
  "editor.semanticHighlighting.enabled": false,
  "javascript.validate.enable": true,
  "javascript.suggestionActions.enabled": false,
  "html.validate.scripts": false,
  "html.validate.styles": false,
  "html.customData": [
    "./.vscode/custom-data/accordion.html-data.json",
    "./.vscode/custom-data/carousel.html-data.json",
    "./.vscode/custom-data/dropdown.html-data.json",
    "./.vscode/custom-data/pjax.html-data.json",
    "./.vscode/custom-data/purchase.html-data.json",
    "./.vscode/custom-data/sticky.html-data.json",
    "./.vscode/custom-data/stimulus.html-data.json"
  ],
  "css.validate": false,
  "scss.validate": false,
  "stylelint.packageManager": "pnpm",
  "stylelint.enable": true,
  "highlight.regexes": {
    "\\b(Locale|DOM)(\\.)": {
      "regexFlags": "g",
      "filterLanguageRegex": "javascript",
      "filterFileRegex": ".*\\.js",
      "decorations": [
        {
          "color": "#E91E63"
        },
        {
          "color": "#81D4FA"
        }
      ]
    },
    "\\b(data\\-(?:controller|action))\\b": {
      "regexFlags": "g",
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#ffa4f3"
        }
      ]
    },

    "\\b(data\\-[a-z-]+\\-(?:class|value|target|param))\\b": {
      "regexFlags": "g",
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#ffa4f3"
        }
      ]
    },

    "(@price)": {
      "regexFlags": "g",
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#f2f700"
        }
      ]
    },
    "(?<=<)(icon)\\s+": {
      "regexFlags": "g",
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#81D4FA"
        }
      ]
    }
  },
  "vsicons.associations.files": [
    {
      "icon": "vscode-insiders",
      "extensions": [
        "stimulus.html-data.json",
        "pjax.html-data.json",
        "accordion.html-data.json",
        "dropdown.html-data.json",
        "purchase.html-data.json",
        "carousel.html-data.json",
        "sticky.html-data.json"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "gulp",
      "extensions": ["gulp.config.js"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "scss",
      "extensions": ["scss.config.js"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "json",
      "extensions": ["json.config.js"],
      "filename": true,
      "format": "svg"
    }
  ],
  "cSpell.ignoreWords": [
    "gdrp",
    "siema",
    "brixtol",
    "brixtoltextiles",
    "pjax",
    "söndag",
    "sjunde",
    "klaviyo",
    "Νίκος",
    "Σαβίδης",
    "mithril"
  ]
}
