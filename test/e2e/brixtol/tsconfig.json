{
  "exclude": ["node_modules", "package", "test", "build"],
  "include": [
    "src/scripts/types/export.d.ts",
    "src/scripts/types/*.ts",
    "src/scripts/modules/*.ts",
    "src/scripts/components/*",
    "src/scripts/components/cart/*.ts",
    "src/scripts/components/product/*.ts",
    "src/scripts/components/collection/*.ts",
    "src/scripts/controllers/*.ts",
    "src/scripts/application/toast.ts",
    "src/scripts/bundle.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "ESNext",
    "allowUnreachableCode": true,
    "checkJs": false,
    "allowJs": true,
    "incremental": true,
    "outDir": "theme/assets",
    "declaration": false,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitThis": false,
    "skipDefaultLibCheck": true,
    "noStrictGenericChecks": true,
    "noEmit": true,
    "suppressExcessPropertyErrors": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "pretty": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "types/*": ["src/scripts/types/*.ts"],
      "application/*": ["src/scripts/application/*.ts"],
      "components/*": ["src/scripts/components/*.ts"],
      "cart/*": ["src/scripts/components/cart/*.ts"],
      "controllers/*": ["src/scripts/controllers/*.ts"],
      "utils/*": ["src/scripts/utils/*.ts"],
      "modules/*": ["src/scripts/modules/*.ts"]
    }
  }
}
