{%- liquid
  assign og_title = page_title | default: shop.name
  assign og_url = canonical_url | default: shop.url
  assign og_desc = page_description | default: shop.description | default: shop.name %}

<meta name="robots" content="index, follow">
<meta name="google" content="notranslate">
<meta name="mobileoptimized" content="320">
<meta name="handheldfriendly" content="true">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_desc | escape }}">

<meta content="ie=edge,chrome=1" http-equiv="x-ua-compatible">

<meta name="apple-mobile-web-app-title" content=" {{- shop.name | upcase }}">

<meta name="application-name" content=" {{- shop.name | upcase }}">

<meta
  name="google-site-verification"
  content=" {{- settings.google_site_verification }}">

<meta
  name="viewport"
  content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no">

{%- if template contains 'product' -%}

  <meta property="og:title" content=" {{- product.title | strip_html | escape }}">

  <meta
    property="og:price:amount"
    content=" {{- product.price | money_without_currency | strip_html | escape }}">

  <meta property="og:price:currency" content=" {{- cart.currency.iso_code }}">

  <meta
    property="og:image:secure_url"
    content="https:{{ page_image | img_url: 'master' }}">

  <meta property="og:image" content="http:{{ page_image | img_url: 'master' }}">
  <meta property="og:image:width" content=" {{- page_image.width }}">

  <meta property="og:image:height" content=" {{- page_image.height }}">

{%- else -%}

  <meta property="og:image" content="http:{{ 'og_logo.png' | asset_url }}">

  <meta
    property="og:image:secure_url"
    content="https:{{ 'og_logo.png' | asset_url }}"
    property="og:image:secure_url">

{%- endif -%}
