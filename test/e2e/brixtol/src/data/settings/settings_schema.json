  {
    "name": "Components",
    "settings": [
      {
        "type": "header",
        "content": "Cart",
        "info": "Settings and configuration options for the ajax cart offcanvas drawer component"
      },
      {
        "type": "checkbox",
        "id": "cart_shipping",
        "label": "Enable Shipping costs to be displayed",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_bogo",
        "label": "Enable BOGO (Buy one, get one) offer",
        "default": true
      },
      {
        "type": "header",
        "content": "Charity Incentive",
        "info": "Enable a percentage of the customers total order value be donated to a charitable organization"
      },
      {
        "type": "checkbox",
        "id": "cart_charity",
        "label": "Enable Charity Incentive",
        "info": "Enable a percentage of the customers total order value be donated to a charitable organization",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "cart_charity_logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "cart_charity_amount",
        "min": 5,
        "max": 50,
        "step": 5,
        "unit": "%",
        "label": "Donation",
        "default": 10
      },
      {
        "type": "text",
        "id": "cart_charity_organization",
        "label": "Organization",
        "info": "The name of the cause, charity or organization",
        "placeholder": "Organization Name"
      },
      {
        "type": "richtext",
        "id": "cart_charity_subtext",
        "label": "Description",
        "info": "Small description to be shown describing the discount."
      },
      {
        "type": "checkbox",
        "id": "cart_newsletter",
        "label": "Enable Subscriber Incentive",
        "default": true
      }
    ]
  },
  {
    "name": "Settings",
    "settings": [
      {
        "type": "header",
        "content": "Newsletter Incentive",
        "info": "Enable newsletter subscription discounts to customers who sign upto to the brixtol mailing list"
