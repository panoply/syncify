      {
        "type": "range",
        "id": "navigation_font_size",
        "label": "Font Size",
        "min": 1,
        "max": 32,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "navigation_font_weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 300,
        "label": "Font weight"
      },
      {
        "type": "header",
        "content": "Heading Sizes",
        "info": "Adjusts the heading font sizes where h1 is the largest and h6 is the smallest. Leave this unless you know what you are doing."
      },
      {
        "type": "range",
        "id": "font_size_h1",
        "min": 8,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "h1 size",
        "default": 45
      },
      {
        "type": "range",
        "id": "font_size_h2",
        "min": 8,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "h2 size",
        "default": 35
      },
      {
        "type": "range",
        "id": "font_size_h3",
        "min": 8,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "h3 size",
        "default": 30
      },
      {
        "type": "range",
        "id": "font_size_h4",
        "min": 8,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "h3 size",
        "default": 27
      },
      {
        "type": "range",
        "id": "font_size_h5",
        "min": 8,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "h5 size",
        "default": 24
      },
      {
        "type": "range",
        "id": "font_size_h6",
        "min": 8,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "h6 size",
        "default": 22
      },
      {
        "type": "header",
        "content": "Tooltip Styling",
        "info": "Hover tooltip styling"
      },
      {
        "type": "range",
        "id": "tooltip_font_size",
        "label": "Font size",
        "min": 5,
        "max": 25,
        "step": 1,
        "unit": "px",
        "default": 10
      },
      {
        "type": "select",
        "id": "tooltip_text_transform",
        "label": "Text Transform",
        "default": "uppercase",
        "options": [
