@font-face {
	font-family: "icons";
	font-weight: normal;
	font-style: normal;
	font-display: block;
	src: url("{{ 'icons.ttf' | asset_url }}") format("truetype")
		 , url("{{ 'icons.woff' | asset_url }}") format("woff")
		 , url("{{ 'icons.svg' | asset_url }}#icons") format("svg");
}

:root {

	--heading-font-family:{{ settings.adobe_font_family_heading -}}, sans-serif;

	--body-font-family:{{ settings.adobe_font_family_body }}, sans-serif;
	--body-font-size:{{ settings.font_size_body }}px;
	--body-font-weight:{{ settings.font_weight_body -}};
	--body-font-color:{{ settings.color_text }};
	--body-bg-color:{{ settings.color_bg_body }};

	--href-color:{{ settings.color_text }};
	--href-hover:{{ settings.color_text }};

	--navigation-font-size:{{ settings.navigation_font_size }}px;
	--navigation-font-weight:{{ settings.navigation_font_weight }};

	--h1-font-size:{{- settings.font_size_h1 -}}px;
	--h2-font-size:{{- settings.font_size_h2 -}}px;
	--h3-font-size:{{- settings.font_size_h3 -}}px;
	--h4-font-size:{{- settings.font_size_h4 -}}px;
	--h5-font-size:{{- settings.font_size_h5 -}}px;
	--h6-font-size:{{- settings.font_size_h6 -}}px;

	--progress-bar-color:{{ settings.color_progress_bar }};
	--progress-bar-height:{{ settings.progress_bar_height }}px;

	--logo-bg-image: url("{{ 'logo-bg.png' | asset_url}}");

	--loading-spinner: url("{{ 'spinner.svg' | asset_url}}");
	--loading-spinner-black: url("{{ 'spinner-black.svg' | asset_url}}");
	--loading-spinner-white: url("{{ 'spinner-white.svg' | asset_url}}");

	--photoswipe-icons: url("{{ 'photoswipe.svg' | asset_url}}");
}
