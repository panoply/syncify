{
  "stores": [
    {
      "domain": "syncify",
      "themes": {
        "dev": 129457717489,
        "prod": 129457717489,
        "stage": 129457717489,
        "test": 129457717489
      }
    },
    {
      "domain": "boefje",
      "themes": {
        "dev": 43989205050,
        "prod": 43989205050
      }
    }
  ],
  "dirs": {
    "source": "source",
    "output": "theme",
    "import": "import",
    "export": "export",
    "config": "config"
  },
  "paths": {
    "assets": [
      "theme/assets/*.js"
    ],
    "config": [
      "json/config/*.json"
    ],
    "locales": [
      "json/locales/*.json"
    ],
    "layout": [
      "views/theme.liquid"
    ],
    "sections": [
      "views/sections/**/*.liquid"
    ],
    "snippets": [
      "views/snippets/*.liquid",
      "css/vars.css.liquid"
    ],
    "templates": [
      "views/templates/*.liquid",
      "views/templates/*.json"
    ],
    "customers": [
      "views/customers/*.liquid",
      "views/customers/*.json"
    ],
    "metafields": [
      "metafields"
    ],
    "pages": [
      "pages/*.md",
      "pages/*.html"
    ]
  },
  "spawn": {
    "watch": {
      "rollup": "rollup -w -c config/rollup.config.js",
      "webpack": "webpack --watch --color --config config/webpack.config.js"
    },
    "build": {
      "rollup": "rollup -c config/rollup.config.js",
      "webpack": "webpack --config config/webpack.config.js --color"
    }
  },
  "minifier": {
    "collapseWhitespace": true,
    "removeComments": true,
    "removeLiquidComments": true,
    "minifyCSS": true,
    "minifyJS": true,
    "trimNewlinesFromAttributes": true,
    "stripRedundantWhitespaceDashes": true,
    "minifySectionSchema": true,
    "ignoredLiquidTags": [],
    "ignoreCustomFragments": [],
    "exclude": []
  },
  "transform": {
    "sprites": {
      "input": "svg/sprite/*.svg",
      "output": "icons.liquid"
    },
    "json": {
      "spaces": 2,
      "minify": "prod"
    },
    "markdown": {
      "minify": "prod",
      "headerIds": true,
      "headerPrefix": "",
      "highlight": true,
      "mangle": true,
      "silent": false,
      "smartypants": false
    },
    "sections": {
      "allowPrefix": true,
      "onlyPrefixDuplicates": false,
      "prefixSeparator": "_",
      "globals": ["global"]
    },
    "styles": [
      {
        "input": "styles/stylesheet.scss",
        "snippet": false,
        "rename": "stylesheet.min.css",
        "postcss": {
          "env": "prod"
        },
        "include": [
          "node_modules/"
        ],
        "watch": [
          "styles/**/*.scss"
        ],
        "sass": {
          "warnings": false,
          "sourcemap": true,
          "style": "compressed"
        }
      },
      {
        "input": "scss/index.scss",
        "snippet": false,
        "rename": "main.min.css",
        "watch": [
          "!scss/bootstrap.scss",
          "scss/dir/*.scss"
        ]
      },
      {
        "input": "scss/bootstrap.scss",
        "snippet": false,
        "sass": {
          "warnings": false,
          "sourcemap": true,
          "style": "compressed"
        },
        "include": [
          "node_modules/"
        ]
      },
      {
        "input": "css/styles/one.css",
        "rename": "example.css",
        "snippet": false,
        "watch": [
          "css/**/*.css"
        ]
      },
      {
        "input": [
          "scss/base/*.scss",
          "scss/independent/*.scss"
        ],
        "rename": {
          "prefixDir": true,
          "separator": "-"
        }
      }
    ]
  }
},
