<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge">
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1">

    <title>
      {{ page_title }}
    </title>


    <style>
      {{ settings.body_font | font_face }}
    </style>

    {{ 'base.min.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}

    <script>



      function example () {

        const xhr = new XMLHttpRequest()

        xhr.key = window.location.href;
        xhr.responseType = 'text';

        xhr.onerror = (e) => {
          console.log(e)
        }
        xhr.open('get', xhr.key);

      }

      example()
    </script>

  </head>

  <body class="bg-gray-50 h-4/5">

    {{ content_for_layout }}

  </body>
</html>