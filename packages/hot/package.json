{
  "name": "@syncify/hot",
  "version": "0.3.0",
  "scripts": {
    "dev": "esbuild ./src/index.ts --bundle --format=iife --outfile=../../hot.js --watch",
    "build": "pnpm run build:out && pnpm run build:hot",
    "build:out": "esbuild ./src/index.ts --bundle --format=iife --minify --outfile=../../hot.js",
    "build:hot": "esbuild ./src/index.ts --bundle --format=iife --minify --outfile=hot.js"
  },
  "main": "./hot.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/panoply/syncify.git"
  },
  "author": {
    "name": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
    "url": "https://github.com/panoply",
    "email": "n.savvidis@gmx.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@syncify/eslint-config": "workspace:^",
    "@syncify/tsconfig": "workspace:^",
    "esbuild": "^0.24.0",
    "morphdom": "^2.7.4"
  }
}
