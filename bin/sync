#!/usr/bin/env node

const fn = require('../package/index.js').default;
const argv = require('minimist')(process.argv.slice(1), {
  default: {
    cli: true,
    interactive: false,
    terminal: 'dashboard',
    cwd: process.cwd(),
    dev: true,
    prod: false,
    env: 'production'
  },
  boolean: [
    'dev',
    'prod'
  ],
  string: [
    's',
    't',
    'o',
    'e',
    'env'
  ],
  alias: {
    store: 's',
    theme: 't',
    output: 'o'
  }
});

fn(argv);
