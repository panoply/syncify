{
  "exclude": [
    "node_modules/**/*",
    "dist",
    "tests",
    "straps",
    "test",
    "docs"
  ],
  "include": [
    "lib/**/*.ts",
    "types/*.d.ts",
    "types/internal/cli.d.ts",
    "types/internal/internal.d.ts"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "node",
    ]
  },
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "removeComments": true,
    "lib": [
      "ESNext",
      "es2020",
      "DOM"
    ],
    "module": "CommonJS",
    "declaration": false,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitThis": false,
    "skipDefaultLibCheck": true,
    "noStrictGenericChecks": true,
    "noEmit": true,
    "suppressExcessPropertyErrors": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "rootDir": "lib",
    "baseUrl": ".",
    "paths": {
      "types": [
        "./types/index.d.ts"
      ],
      "types/internal": [
        "./types/internal.d.ts"
      ],
      "~state": [
        "./lib/model/$.ts"
      ],
      "~const": [
        "./lib/const.ts"
      ],
      "~process/*": [
        "./lib/process/*"
      ],
      "~cli/*": [
        "./lib/cli/*"
      ],
      "~options/*": [
        "./lib/options/*"
      ],
      "~transform/*": [
        "./lib/transform/*"
      ],
      "~modes/*": [
        "./lib/modes/*"
      ],
      "~resource/*": [
        "./lib/resource/*"
      ],
      "~requests/*": [
        "./lib/requests/*"
      ],
      "~forks/*": [
        "./lib/forks/*"
      ],
      "~hot/*": [
        "./lib/hot/*"
      ],
      "~log": [
        "./lib/log/index.ts"
      ],
      "~log/*": [
        "./lib/log/*.ts",
        "!./src/log/index.ts"
      ],
      "~native": [
        "./lib/utils/native.ts"
      ],
      "~timer": [
        "./lib/utils/timer.ts"
      ],
      "~chars": [
        "./lib/utils/chars.ts"
      ],
      "~utils": [
        "./lib/utils/utils.ts"
      ],
      "~utils/*": [
        "./lib/utils/*",
      ]
    }
  }
}