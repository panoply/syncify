{
  "exclude": [
    "node_modules/**/*",
    "dist",
    "tests",
    "straps",
    "test",
    "docs"
  ],
  "include": [
    "syncify/**/*.ts",
    "types/*.d.ts",
    "types/internal/cli.d.ts",
    "types/internal/internal.d.ts"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "node",
    ]
  },
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "removeComments": true,
    "lib": [
      "ESNext",
      "es2020",
      "DOM"
    ],
    "module": "CommonJS",
    "declaration": false,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitThis": false,
    "skipDefaultLibCheck": true,
    "noStrictGenericChecks": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "rootDir": "syncify",
    "baseUrl": ".",
    "paths": {
      /*
      /* TYPE DECLARATIONS
      /* -------------------------------------------- */
      "types": [
        "./types/index.d.ts"
      ],
      "types/internal": [
        "./types/internal.d.ts"
      ],
      /*
      /* FILES
      /* -------------------------------------------- */
      "syncify:state": [
        "./syncify/model/$.ts"
      ],
      "syncify:file": [
        "./syncify/model/file.ts"
      ],
      "syncify:const": [
        "./syncify/const.ts"
      ],
      "syncify:native": [
        "./syncify/utils/native.ts"
      ],
      "syncify:timer": [
        "./syncify/utils/timer.ts"
      ],
      "syncify:utils": [
        "./syncify/utils/utils.ts"
      ],
      "syncify:interpolate": [
        "syncify/cli/interpolate.ts"
      ],
      "syncify:log": [
        "./syncify/log/loggers.ts",
      ],
      "syncify:errors": [
        "./syncify/log/errors.ts",
      ],
      /*
      /* ANSI
      /* -------------------------------------------- */
      "syncify:ansi": [
        "syncify/ansi/ansi.ts"
      ],
      "syncify:colors": [
        "./syncify/ansi/colors.ts"
      ],
      "syncify:codeframe": [
        "syncify/ansi/codeframe.ts"
      ],
      "syncify:symbol": [
        "syncify/ansi/symbol.ts"
      ],
      /*
      /* TRANSFORMS
      /* -------------------------------------------- */
      "syncify:asset": [
        "./syncify/transform/asset.ts"
      ],
      "syncify:json": [
        "./syncify/transform/json.ts"
      ],
      "syncify:liquid": [
        "./syncify/transform/liquid.ts"
      ],
      "syncify:pages": [
        "./syncify/transform/pages.ts.ts"
      ],
      "syncify:schema": [
        "./syncify/transform/schema.ts",
      ],
      "syncify:script": [
        "./syncify/transform/script.ts",
      ],
      "syncify:style": [
        "./syncify/transform/style.ts",
      ],
      "syncify:svg": [
        "./syncify/transform/svg.ts",
      ],
      /*
      /* DIRECTORIES
      /* -------------------------------------------- */
      "syncify:process/*": [
        "./syncify/process/*"
      ],
      "syncify:cli/*": [
        "./syncify/cli/*"
      ],
      "syncify:options/*": [
        "./syncify/options/*"
      ],
      "syncify:transform/*": [
        "./syncify/transform/*"
      ],
      "syncify:modes/*": [
        "./syncify/modes/*"
      ],
      "syncify:resource/*": [
        "./syncify/resource/*"
      ],
      "syncify:requests/*": [
        "./syncify/requests/*"
      ],
      "syncify:plugins/*": [
        "syncify/plugins/*"
      ],
      "syncify:forks/*": [
        "./syncify/forks/*"
      ],
      "syncify:hot/*": [
        "./syncify/hot/*"
      ],
      "syncify:log/*": [
        "./syncify/log/*.ts",
        "!./syncify/log/index.ts"
      ],
      "syncify:utils/*": [
        "./syncify/utils/*",
      ]
    }
  }
}