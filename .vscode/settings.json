{
  "explorer.fileNesting.enabled": false,
  "npm.packageManager": "pnpm",
  "files.associations": {
    "*.scss.liquid": "scss",
    "*.css.liquid": "css",
    "*i18n.js.liquid": "javascript",
    "*shop.js.liquid": "javascript",
    "*config.js.liquid": "javascript"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": false,
    // "**/node_modules/.syncify": false
    //"**/example": true
  },
  "html.customData": [
    ".vscode/icon.html-data.json"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "package.json"
      ],
      "url": "./.vscode/schema/tsup.json"
    },
    {
      "fileMatch": [
        "**/package.json"
      ],
      "url": "./.vscode/schema/syncify.json"
    },
    {
      "fileMatch": [
        "syncify.env.json"
      ],
      "url": "/schema/syncify.env.json"
    }
  ],
  "highlight.regexes": {
    "(\\$)([a-z:(]*\\b)": {
      "regexFlags": "g",
      "filterLanguageRegex": "typescript",
      "decorations": [
        {
          "color": "#ffbafc"
        }
      ]
    },
    "(?<=\\b(?:from) ')(\\.)(\/)(?=[a-z])": {
      "regexFlags": "g",
      "filterLanguageRegex": "typescript",
      "decorations": [
        {
          "color": "#F48FB1",
          "fontStyle": "bold"
        },
        {
          "color": "#E91E63",
          "fontStyle": "bold"
        },
      ]
    },
    "(?<=\\b(?:from) ')(syncify)(:)(.*?)(?=')": {
      "regexFlags": "g",
      "filterLanguageRegex": "typescript",
      "decorations": [
        {
          // "color": "#fcc06c",
        },
        {
          "color": "#E91E63",
          "fontStyle": "bold"
        },
        {
          // "color": "#fcc06c",
        },
      ]
    }
  },
  "vsicons.associations.files": [
    {
      "icon": "svg",
      "extensions": [
        "svgo.config.js",
        "svgo.config.cjs"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "sass",
      "extensions": [
        "sass.config.js",
        "sass.config.cjs"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "liquid",
      "extensions": [
        "syncify.config.js",
        "syncify.config.mjs",
        "syncify.config.json",
        "syncify.env.json",
        ".syncifyrc.json",
        ".syncify",
        ".syncifyrc",
        ".liquifyrc",
        ".env.syncify"
      ],
      "filename": true,
      "format": "liquid"
    }
  ],
  "cSpell.words": [
    "adastra",
    "gzipsize",
    "imgmin",
    "linkify",
    "obfucss",
    "pnpx",
    "purgecss",
    "Spriter",
    "syver",
    "tailwindcss"
  ],
  "[liquid]": {
    "editor.formatOnSave": true
  },
  "liquid.config.method": "workspace",
  "liquid.format.rules": {
    "liquid": {
      "indentAttribute": true,
      "forceArgument": 3
    }
  }
}