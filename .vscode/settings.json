{
  "stylelint.validate": [
    "scss",
    "sass",
    "less",
    "postcss"
  ],
  "spx.files": [
    "./docs/src/app/**/*.ts"
  ],
  "stylelint.enable": false,
  "[liquid]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "sissel.shopify-liquid"
  },
  "npm.packageManager": "pnpm",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
    // "**/node_modules/.syncify": false
    //"**/example": true
  },
  "html.customData": [
    ".vscode/icon.html-data.json"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "package.json"
      ],
      "url": "./.vscode/schema/tsup.json"
    },
    {
      "fileMatch": [
        "**/package.json"
      ],
      "url": "./.vscode/schema/syncify.json"
    },
    {
      "fileMatch": [
        "syncify.env.json"
      ],
      "url": "/schema/syncify.env.json"
    }
  ],
  "highlight.regexes": {
    "(\\$)([a-z:(]*\\b)": {
      "regexFlags": "g",
      "filterLanguageRegex": "typescript",
      "decorations": [
        {
          "color": "#ffbafc"
        }
      ]
    },
    "(?<=:{3,4}\\s)(grid|example|tabs|css|scss|html|note)": {
      "decorations": [
        {
          "color": "#81D4FA",
          "fontWeight": "900"
        }
      ]
    },
    "(?<=\\b(?:from) ')(\\.)(\/)(?=[a-z])": {
      "regexFlags": "g",
      "filterLanguageRegex": "typescript",
      "decorations": [
        {
          "color": "#F48FB1",
          "fontStyle": "bold"
        },
        {
          "color": "#E91E63",
          "fontStyle": "bold"
        },
      ]
    },
    "(?<=\\b(?:from) ')(syncify)(:)(.*?)(?=')": {
      "regexFlags": "g",
      "filterLanguageRegex": "typescript",
      "decorations": [
        {
          // "color": "#fcc06c",
        },
        {
          "color": "#E91E63",
          "fontStyle": "bold"
        },
        {
          // "color": "#fcc06c",
        },
      ]
    }
  },
  "vsicons.associations.files": [
    {
      "icon": "svg",
      "extensions": [
        "svgo.config.js",
        "svgo.config.cjs"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "sass",
      "extensions": [
        "sass.config.js",
        "sass.config.cjs"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "liquid",
      "extensions": [
        "syncify.config.js",
        "syncify.config.mjs",
        "syncify.config.json",
        "syncify.env.json",
        ".syncifyrc.json",
        ".syncify",
        ".syncifyrc",
        ".liquifyrc",
        ".env.syncify"
      ],
      "filename": true,
      "format": "liquid"
    }
  ],
  "cSpell.words": [
    "adastra",
    "capailibilites",
    "extensabilities",
    "gzipsize",
    "imgmin",
    "linkify",
    "obfucss",
    "Odestry",
    "pnpx",
    "purgecss",
    "Spriter",
    "syver",
    "tailwindcss",
    "tsize",
    "twoslash"
  ]
}