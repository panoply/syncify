{
  "eslint.packageManager": "pnpm",
  "files.associations": {
    "*.liquid": "html",
    "*.scss.liquid": "scss",
    "*.css.liquid": "css",
    "*i18n.js.liquid": "javascript",
    "*shop.js.liquid": "javascript",
    "*config.js.liquid": "javascript"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
    //"**/node_modules": true,
    // "**/node_modules/.syncify": false,
    //"**/example": true
  },
  "html.customData": [".vscode/icon.html-data.json"],
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "url": "/schema/syncify.json"
    },
    {
      "fileMatch": [".syncifyrc", ".syncifyrc.json"],
      "url": "/schema/syncifyrc.json"
    }
  ],
  "vsicons.associations.files": [
    {
      "icon": "svg",
      "extensions": ["svgo.config.js", "svgo.config.cjs"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "sass",
      "extensions": ["sass.config.js", "sass.config.cjs"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "liquid",
      "extensions": [
        "syncify.config.js",
        "syncify.config.mjs",
        "syncify.json",
        ".syncifyrc.json",
        ".syncify",
        ".syncifyrc",
        ".liquifyrc",
        ".env.syncify"
      ],
      "filename": true,
      "format": "liquid"
    }
  ]
}
