{
  "engine": "shopify",
  "files": {
    "settings": "theme/config/settings_schema.json",
    "locales": "theme/locales/en.default.json",
    "schema": [
      "source/schema/*"
    ],
    "sections": [
      "./theme/sections/*.liquid"
    ],
    "snippets": [
      "./theme/snippets/*.liquid"
    ]
  },
  "format": {
    "ignore": [
      "theme/**"
    ],
    "liquid": {
      "commentIndent": true,
      "forceFilter": 3,
      "forceArgument": 3
    },
    "markup": {
      "forceIndent": true,
      "forceAttribute": 2
    }
  }
}