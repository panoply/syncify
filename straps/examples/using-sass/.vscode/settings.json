{
  "json.schemas": [
    {
      "url": "https://unpkg.com/@syncify/schema/config.json",
      "fileMatch": [
        "syncify.config.json"
      ]
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true
  },
  "html-css-class-completion.includeGlobPattern": "theme/**/*.{css,liquid}",
  "html-css-class-completion.CSSLanguages": [
    "css"
  ],
  "html-css-class-completion.HTMLLanguages": [
    "liquid",
    "html",
    "markdown"
  ],
  "[liquid]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "sissel.shopify-liquid"
  }
}